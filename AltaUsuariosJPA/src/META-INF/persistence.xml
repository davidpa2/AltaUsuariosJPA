<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="AltaUsuariosJPA">
		<class>model.entities.Acuerdo</class>
		<class>model.entities.Idioma</class>
		<class>model.entities.Pai</class>
		<class>model.entities.Usuario</class>
		<properties> 
           <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/altausuarios?serverTimezone=Europe/Madrid"/>
            <property name="javax.persistence.jdbc.user" value="altausuarios"/>
            <property name="javax.persistence.jdbc.password" value="1234"/>
        </properties>
	</persistence-unit>
</persistence>
